<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <RootNamespace>Onyx.Application</RootNamespace>
        <AssemblyName>Onyx.Application</AssemblyName>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <DocumentationFile>$(OutputPath)\$(AssemblyName).xml</DocumentationFile>
        <NoWarn>1591</NoWarn>
    </PropertyGroup>

        
    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

        <ItemGroup>
      <Compile Remove="Angular\**" />
      <Compile Remove="Main\LayoutsCluster\Menu\**" />
      <Compile Remove="Main\InfoCluster\CorporationInfos\EventHandlers\**" />
      <Compile Remove="Main\ProductsCluster\POptionsCluster\Structure\Role\**" />
