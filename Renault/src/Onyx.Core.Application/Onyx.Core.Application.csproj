      <EmbeddedResource Remove="Main\LayoutsCluster\Menu\**" />
      <EmbeddedResource Remove="Main\InfoCluster\CorporationInfos\EventHandlers\**" />
      <EmbeddedResource Remove="Main\ProductsCluster\POptionsCluster\Structure\Role\**" />
      <None Remove="Angular\**" />
      <None Remove="Main\LayoutsCluster\Menu\**" />
      <None Remove="Main\InfoCluster\CorporationInfos\EventHandlers\**" />
      <None Remove="Main\ProductsCluster\POptionsCluster\Structure\Role\**" />
      <None Update="$(OutputPath)\$(AssemblyName).xml">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
          <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
